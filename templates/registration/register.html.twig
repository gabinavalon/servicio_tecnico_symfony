{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
     <div class="row mt-3    ">
        <div class="col-4">
        </div>
        <div class="col-4 p-5" style="-webkit-box-shadow: 8px 9px 19px 7px rgba(0,0,0,0.69);
             box-shadow: 8px 9px 19px 7px rgba(0,0,0,0.69);
             border-radius: 5px">
    <h1>Registro</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.nombre) }}
    {{ form_row(registrationForm.apellidos) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.telefono) }}
    {{ form_row(registrationForm.foto) }}
    {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

    <button type="submit" class="btn btn-outline-dark">Register</button>
    {{ form_end(registrationForm) }}
     </div>
        <div class="col-4">
        </div>
    </div>
{% endblock %}
