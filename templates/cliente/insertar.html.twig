{% extends 'base.html.twig' %}


{% block title %}Insertar cliente{% endblock %}

{% block body %}
    <div class="row mt-3    ">
       
        <div class="col-4">
        </div>
        <div class="col-4 p-5" style="-webkit-box-shadow: 8px 9px 19px 7px rgba(0,0,0,0.69);
             box-shadow: 8px 9px 19px 7px rgba(0,0,0,0.69);
             border-radius: 5px;
             background-color: white;">
             <h1>Insertar cliente</h1>
            {{ form_start(crearclienteForm) }}
            {{ form_row(crearclienteForm.nombre, {
            label: 'Nombre cliente: '
        }) }}

            {{ form_row(crearclienteForm.apellidos, {
            label: 'Apellidos: '
        }) }}

            {{ form_row(crearclienteForm.telefono, {
            label: 'Teléfono: '
        }) }}

            {{ form_row(crearclienteForm.direccion, {
            label: 'Dirección: '
        }) }}

            {{ form_row(crearclienteForm.save) }}
            {{ form_end(crearclienteForm) }} <br>
        </div>
        <div class="col-4">
        </div>
    </div>
    <br>
    <hr>
    <br>
    <a href="{{ path("listado_clientes") }}" role="button" class="btn-lg">Volver</a> <br>

{% endblock %}
